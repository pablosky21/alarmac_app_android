<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proyectotitulo2017.alarmacomunitariav2.MensajeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGrabadorVoz"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="onClickScreenMsgVoz"
            android:scaleType="centerCrop"
            android:text="Mensaje de voz" />

        <Button
            android:id="@+id/idMensaje"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/holo_green_dark"
            android:onClick="onclickMsgAlerta"
            android:scaleType="fitCenter"
            android:text="Mensaje de Alerta" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
